@using System.Web.Optimization
<!DOCTYPE html>
<html ng-app="myApp">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">

    <link href="app/logo.png" sizes="120x120" rel="apple-touch-icon">

    <title>Thinktecture myApp</title>

    @Styles.Render("~/app/css")
</head>
<body>
    <div id="wrapper">
        <div ng-include="'app/navigation/nav.html'"></div>
        <div id="page-wrapper">
            <div class="row" ng-controller="productsList">
                <div class="col-lg-12">
                    <h3 class="page-header">Products</h3>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            On stock
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Title</th>
                                            <th>Description</th>
                                            <th>Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="p in products">
                                            <td>{{ p.Id}} </td>
                                            <td>{{ p.Title }}</td>
                                            <td>{{ p.Description }}</td>
                                            <td>{{ p.Amount }}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/app/js")
</body>
</html>
